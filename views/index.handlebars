<aside id="not-eaten">
    <ol>
        {{#each burger}}
            {{#unless devoured}}
                 {{> burgers/burger-block eaten=false}}
            {{/unless}}
        {{/each}}
    </ol>
</aside>

<aside id="eaten">
<ol>
    {{#each burger}}
        {{#if devoured}}
                {{> burgers/burger-block eaten=true}}
        {{/if}}
    {{/each}}
    </ol>
</aside>